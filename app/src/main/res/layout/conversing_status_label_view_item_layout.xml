<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:gravity="left|center" >

  <LinearLayout
      android:id="@+id/cs_label_info"
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cs_log_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cs_schedule_tv"
        android:tag="LABEL_SCHEDULE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

  </LinearLayout>

  <Button
      android:id="@+id/talking"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:minWidth="0dp"
      android:layout_alignParentRight="true"
      android:text="Talking"
      android:textSize="14sp" />

  <Button
      android:id="@+id/quiet"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="0dp"
      android:layout_toLeftOf="@id/talking"
      android:text="Quiet"
      android:textSize="14sp" />

  <Button
      android:id="@+id/end_cs_label_log_bt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="0dp"
      android:layout_toLeftOf="@id/quiet"
      android:text="End"
      android:textSize="14sp" />

</RelativeLayout>