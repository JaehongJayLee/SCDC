      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">

          <TextView android:id="@+id/dataCountText"
              android:text="None"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <Button android:id="@+id/updateDataCountButton"
