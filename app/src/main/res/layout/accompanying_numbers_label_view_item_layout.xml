<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:gravity="left|center" >

  <LinearLayout
      android:id="@+id/an_label_info"
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/an_log_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/an_schedule_tv"
        android:tag="LABEL_SCHEDULE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

  </LinearLayout>

  <Button
      android:id="@+id/with_over_7_bt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:minWidth="0dp"
      android:layout_alignParentRight="true"
      android:text="7~"
      android:textSize="14sp" />

  <Button
      android:id="@+id/with_4_to_6_bt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="0dp"
      android:layout_toLeftOf="@id/with_over_7_bt"
      android:text="4~6"
      android:textSize="14sp" />

  <Button
      android:id="@+id/with_2_to_3_bt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="0dp"
      android:layout_toLeftOf="@id/with_4_to_6_bt"
      android:text="2~3"
      android:textSize="14sp" />

  <Button
      android:id="@+id/alone_bt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="0dp"
      android:layout_toLeftOf="@id/with_2_to_3_bt"
      android:text="Alone"
      android:textSize="14sp" />

  <Button
      android:id="@+id/end_an_label_log_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="0dp"
      android:layout_toLeftOf="@id/alone_bt"
      android:text="End"
      android:textSize="14sp" />

</RelativeLayout>